{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@api/*": ["backend/api/*"],
      "@utils/*": ["backend/utils/*"],
      "@middlewares/*": ["backend/middlewares/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "exclude": ["./src/client"]
}
